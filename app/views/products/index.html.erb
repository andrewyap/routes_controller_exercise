<h2>Hello World</h2>

<h4> Products <$20! </h4>
<% cheap_products = Product.includes(:user).where('price < 20') %>

<table>
	<tr>
		<th>Name</th>
		<th>Price</th>
		<th>Seller</th>
	</tr>
	<% cheap_products.each do |prod| %>
	<tr>
		<td><%= prod.name %></td>
		<td><%= prod.price %></td>
		<td><%= prod.user.name %></td>
	</tr>
	<% end %>
</table>

<% first_product = Product.first %>

<p>
	Product Name: '<%= first_product.name %>' costs $<%= first_product.price %>
	The seller for this product is '<%= first_product.user.name %>'.
</p>

<h4>ALL PRODUCTS!</h4>
<% all_products = Product.includes(:user).all %>

<table>
	<tr>
		<th>Name</th>
		<th>Price</th>
		<th>Seller</th>
	</tr>
	<% all_products.each do |prod| %>
	<tr>
		<td><%= prod.name %></td>
		<td><%= prod.price %></td>
		<td><%= prod.user.name %></td>
	</tr>
	<% end %>
</table>